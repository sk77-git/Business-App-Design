<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HazesoftDay1Task" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HazesoftDay1Task.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="welcomeTxtStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_black</item>
        <item name="android:textSize">@dimen/welcomeTxtSize</item>
    </style>
    <style name="titleTxtStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/titleTxtColor</item>
        <item name="android:textSize">@dimen/titleTxtSize</item>
    </style>
    <style name="rcvTitleTxtStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/titleTxtColor</item>
        <item name="android:textSize">@dimen/rcvTitleTxtSize</item>
    </style>
    <style name="subtitleTxtStyle">
        <item name="android:textColor">@color/subtitleTxtColor</item>
        <item name="android:textSize">@dimen/subtitleTxtSize</item>
    </style>
</resources>